{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Bushfires in Australia 1 September to 31 December, 2019",
    "fontSize": 24,
    "color": "#990000"
  },
  "background": "white",
  "projection": { "type": "equirectangular" },
  "params": [
    {
      "name": "currentDateOffset",
      "value": 0,
      "bind": {
        "input": "hidden"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "js/ne_10m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_10m_admin_0_countries" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "palegreen",
        "stroke": "sandybrown"
      }
    },
    {
      "data": {
        "url": "../data/fire_archive.csv"
      },
      "transform": [
        {
          "calculate": "1567260000000 + 24*60*60*1000*currentDateOffset",
          "as": "dateFilter"
        },
        {
          "calculate": "timeFormat(datum.dateFilter, '%d %B %Y')",
          "as": "formattedDate"
        },
        {
          "filter": "(datum.acq_date <= datum.dateFilter) && (datum.acq_date >= datum.dateFilter - 24*60*60*1000*3)"
        }
      ],
      "mark": { "type": "circle", "tooltip": { "content": "data" } },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": {
          "field": "brightness",
          "type": "quantitative",
          "title": "Brightness",
          "scale": { "domain": [0, 500] },
          "legend": {
            "orient": "right",
            "titlePadding": 10,
            "gradientLength": 120
          }
        },
        "color": {
          "field": "brightness",
          "type": "quantitative",
          "title": "Brightness",
          "scale": { "scheme": "inferno", "domain": [0, 500] }
        },
        "tooltip": [
          {
            "field": "brightness",
            "type": "quantitative",
            "title": "Brightness"
          },
          {
            "field": "acq_date",
            "type": "temporal",
            "title": "Date",
            "format": "%d %b %Y"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 18,
        "stroke": "white",
        "strokeWidth": 1,
        "fontWeight": "bold"
      },
      "data": {
        "values": [{}]
      },
      "transform": [
        {
          "calculate": "1567260000000 + 24*60*60*1000*currentDateOffset",
          "as": "dateFilter"
        },
        {
          "calculate": "timeFormat(datum.dateFilter, '%d %B %Y')",
          "as": "formattedDate"
        }
      ],
      "encoding": {
        "text": { "field": "formattedDate", "type": "nominal" },
        "x": { "value": 40 },
        "y": { "value": 40 }
      }
    }
  ]
}
